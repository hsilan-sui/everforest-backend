{
  "name": "everforest-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "docker:dev": "docker compose --env-file .env up -d --build",
    "docker:restart": "docker compose --env-file .env up --force-recreate --build -d",
    "docker:stop": "docker compose --env-file .env stop",
    "docker:down": "docker compose --env-file .env down",
    "docker:clean": "docker compose --env-file .env down -v",
    "docker:logs": "docker compose logs -f --tail=100",
    "docker:logs:backend": "docker compose logs -f backend",
    "docker:logs:pg": "docker compose logs -f postgres",
    "init:env": "shx cp .env.example .env",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --config ./jest.config.js --coverage --roots ./test/unit",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testSequencer=./test/sequencer -i --config ./jest.config.js --coverage --roots ./test/integration",
    "init:schema": "typeorm schema:sync -d ./db/data-source.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "if [ \"$HUSKY\" != \"0\" ]; then husky install; fi",
    "seed:admin:docker": "docker compose exec backend node scripts/seedAdmin.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.1",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "ecpay_aio_nodejs": "^1.2.2",
    "express": "^4.21.2",
    "firebase-admin": "^13.2.0",
    "formidable": "^3.5.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.1.1",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.9",
    "openai": "^5.6.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.21",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs}": [
      "eslint --max-warnings=0"
    ],
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
