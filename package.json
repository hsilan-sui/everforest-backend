{
  "name": "everforest-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "docker:dev": "docker compose --env-file .env up -d --build",
    "docker:restart": "docker compose --env-file .env up --force-recreate --build -d",
    "docker:stop": "docker compose --env-file .env stop",
    "docker:down": "docker compose --env-file .env down",  
    "docker:clean": "docker compose --env-file .env down -v",   
    "docker:logs": "docker compose logs -f --tail=100",
    "init:env": "shx cp .env.example .env",
    "test:unit": "node --experimental-vm-modules node_modules/.bin/jest --config ./jest.config.js --coverage --roots ./test/unit",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --testSequencer=./test/sequencer -i --config ./jest.config.js --coverage --roots ./test/integration",
    "init:schema": "typeorm schema:sync -d ./db/data-source.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "nodemon": "^3.1.9",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs}": [
      "eslint --fix"
    ],
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
